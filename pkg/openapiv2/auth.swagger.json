{
  "swagger": "2.0",
  "info": {
    "title": "Chronoverse Auth Service",
    "description": "Chronoverse Auth Service",
    "version": "v1"
  },
  "tags": [
    {
      "name": "AuthService"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login with email and password",
        "description": "Login with the given email and password.",
        "operationId": "AuthService_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authLoginResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "LoginRequest contains the credentials for logging in.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authLoginRequest"
            }
          }
        ],
        "tags": [
          "auth"
        ]
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout a user",
        "description": "Logout a user by invalidating their token.",
        "operationId": "AuthService_Logout",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authLogoutResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "LogoutRequest contains the token to invalidate.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authLogoutRequest"
            }
          }
        ],
        "tags": [
          "auth"
        ]
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "description": "Register a new user with the given email and password.",
        "operationId": "AuthService_Register",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authRegisterResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "RegisterRequest contains the details needed to register a new user.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authRegisterRequest"
            }
          }
        ],
        "tags": [
          "auth"
        ]
      }
    },
    "/auth/validate": {
      "post": {
        "summary": "Validate a token",
        "description": "Validate a given token.",
        "operationId": "AuthService_ValidateToken",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authValidateTokenResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "ValidateTokenRequest contains the token to validate.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authValidateTokenRequest"
            }
          }
        ],
        "tags": [
          "auth"
        ]
      }
    }
  },
  "definitions": {
    "authLoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "User's email address"
        },
        "password": {
          "type": "string",
          "title": "User's password"
        }
      },
      "description": "LoginRequest contains the credentials for logging in."
    },
    "authLoginResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "title": "Authentication token"
        }
      },
      "description": "LoginResponse contains the result of a login attempt."
    },
    "authLogoutRequest": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "title": "Token to invalidate"
        }
      },
      "description": "LogoutRequest contains the token to invalidate."
    },
    "authLogoutResponse": {
      "type": "object",
      "description": "LogoutResponse contains the result of a logout attempt."
    },
    "authRegisterRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "User's email address"
        },
        "password": {
          "type": "string",
          "title": "User's password}"
        }
      },
      "description": "RegisterRequest contains the details needed to register a new user."
    },
    "authRegisterResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "title": "Authentication token"
        }
      },
      "description": "RegisterResponse contains the result of a registration attempt."
    },
    "authValidateTokenRequest": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "title": "Token to validate"
        }
      },
      "description": "ValidateTokenRequest contains the token to validate."
    },
    "authValidateTokenResponse": {
      "type": "object",
      "description": "ValidateTokenResponse contains the result of a token validation attempt."
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
